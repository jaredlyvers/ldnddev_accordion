{{ attach_library('ldnddev_accordion/ldnddev_accordion') }}

{%
    set classes = [
        'ldnddev-accordion'
    ]
%}
{% if content.field_ldnddev_accordion_css.0 %}
    {% set classes = classes|merge([content.field_ldnddev_accordion_css.0|render|clean_class]) %}
{% endif %}



<div {{ attributes.addClass(classes) }}>
    <div class="ldnddev-accordion__items">
        {{ content.field_ldnddev_accordion_item }}
    </div>
</div>